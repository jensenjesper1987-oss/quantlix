# API
API_HOST=0.0.0.0
API_PORT=8000

# CLI (quantlix deploy, run, status)
QUANTLIX_API_KEY=
QUANTLIX_API_URL=http://localhost:8000

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=cloud
POSTGRES_PASSWORD=cloud_secret
POSTGRES_DB=cloud

# Redis
REDIS_URL=redis://redis:6379/0

# MinIO (S3-compatible)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=models

# Auth (generate with: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-change-in-production

# Email (Heysender SMTP for verification)
SMTP_HOST=smtp.heysender.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=support@quantlix.ai
SMTP_FROM_NAME=Quantlix
APP_BASE_URL=https://api.quantlix.ai
PORTAL_BASE_URL=https://app.quantlix.ai

# Stripe (billing)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_STARTER=
STRIPE_PRICE_ID_PRO=

# Usage limits (0 = unlimited)
USAGE_LIMIT_TOKENS_PER_MONTH=0
USAGE_LIMIT_COMPUTE_SECONDS_PER_MONTH=0

# Orchestrator
MOCK_K8S=true
KUBECONFIG=  # leave empty for in-cluster; set path for local dev
