# Copy to terraform.tfvars and fill in
# NEVER commit terraform.tfvars (contains secrets)

hcloud_token = "YOUR_64_CHAR_HETZNER_CLOUD_TOKEN"  # From https://console.hetzner.cloud

# Use file paths (recommended — avoids copy-paste issues)
ssh_public_key_path  = "~/.ssh/id_ed25519.pub"
ssh_private_key_path = "~/.ssh/id_ed25519"

cluster_name   = "quantlix"
location       = "nbg1"         # nbg1, fsn1, hel1 (server location)
network_region = "eu-central"   # eu-central (Europe) or us-east (US)
node_type    = "cx23"   # 2 vCPU, 4GB (min for kube-hetzner)
node_count   = 2

# Optional: GPU node pool (Hetzner Cloud has no GPU — uses cx33 as placeholder)
# enable_gpu   = true
# gpu_node_type = "cx33"   # 4 vCPU, 8GB; cx43 for larger
# gpu_node_count = 1
# gpu_location  = "fsn1"   # use fsn1/hel1 if nbg1 has resource_unavailable
